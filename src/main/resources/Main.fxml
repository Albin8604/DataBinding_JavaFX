<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<Stage title="DataBinding - Test" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.albin.ictskills.controller.MainController">
   <scene>
      <Scene stylesheets="@css/standartStyle.css">
         <root>
            <BorderPane prefHeight="428.0" prefWidth="649.0">
               <center>
                  <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="15.0" />
                     </BorderPane.margin>
                     <items>
                        <TableView fx:id="personTable" onMouseClicked="#clickedOnTable" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="PNr" />
                            <TableColumn prefWidth="75.0" text="Name" />
                              <TableColumn prefWidth="75.0" text="Vorname" />
                              <TableColumn prefWidth="75.0" text="Tel" />
                              <TableColumn prefWidth="75.0" text="Aktiv" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <PieChart fx:id="pieChart" />
                     </items>
                  </SplitPane>
               </center>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <bottom>
                  <VBox spacing="5.0" BorderPane.alignment="CENTER">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="pNrTextField" />
                              <TextField fx:id="nameTextField" layoutX="10.0" layoutY="10.0" />
                              <TextField fx:id="vornameTextField" layoutX="170.0" layoutY="10.0" />
                              <TextField fx:id="telTextField" layoutX="329.0" layoutY="10.0" />
                              <CheckBox fx:id="aktivCheckBox" mnemonicParsing="false" prefWidth="100.0" text="Aktiv" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" spacing="10.0">
                           <children>
                              <Button layoutX="419.0" layoutY="10.0" mnemonicParsing="false" onAction="#delete" prefWidth="100.0" text="Delete" />
                              <Button mnemonicParsing="false" onAction="#save" prefWidth="100.0" text="Save" />
                              <Button defaultButton="true" layoutX="529.0" layoutY="10.0" mnemonicParsing="false" onAction="#add" prefWidth="100.0" text="Add" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </bottom>
            </BorderPane>
         </root>
      </Scene>
   </scene>
</Stage>
